<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/pref_category_general">
        <ListPreference
            android:key="pref_duration"
            android:title="@string/pref_duration"
            android:dialogTitle="@string/pref_duration"
            android:entries="@array/pref_duration_entries"
            android:entryValues="@array/pref_duration_values"
            android:defaultValue="@string/pref_duration_entry_15sec"/>
        <ListPreference
            android:key="pref_download"
            android:title="@string/pref_download"
            android:dialogTitle="@string/pref_download"
            android:entries="@array/pref_download_entries"
            android:entryValues="@array/pref_download_values"
            android:defaultValue="@string/pref_download_entry_mobile_and_wifi"/>
        <ListPreference
            android:key="pref_sync"
            android:title="@string/pref_sync"
            android:dialogTitle="@string/pref_sync"
            android:entries="@array/pref_sync_entries"
            android:entryValues="@array/pref_sync_values"
            android:defaultValue="@string/pref_sync_entry_1_hour"/>
        <ListPreference
            android:key="pref_cache"
            android:title="@string/pref_cache"
            android:dialogTitle="@string/pref_cache"
            android:entries="@array/pref_cache_entries"
            android:entryValues="@array/pref_cache_values"
            android:defaultValue="@string/pref_cache_entry_10_tracks"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/pref_category_about">
        <EditTextPreference
            android:key="pref_build"
            android:title="@string/pref_build"
            android:summary="@string/pref_build_summary"/>

    </PreferenceCategory>
</PreferenceScreen>